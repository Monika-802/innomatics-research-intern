### 1. Unique Words in a Sentence 

sentence = input("Enter sentence: ")
words = sentence.split()
unique_words = set(words)

print(f"Unique words count: {len(unique_words)}")
print(f"Unique words: {unique_words}")

### 2. Highest Salary from Employee Data

employees = { "Ravi": 75000, "Anita": 68000, "Kiran": 72000 }
high_salary_employee = max(employees, key=employees.get)
highest_salary = employees[high_salary_employee]
print(f"Highest Salary: {high_salary_employee} - {highest_salary}")

### 3. Find Maximum and Minimum Values

numbers = [45, 22, 89, 10, 66]
def find_max_min(numbers):
    if not numbers:
        return None, None
    
    max_value = numbers[0]
    min_value = numbers[0]
    
    for number in numbers:
        if number > max_value:
            max_value = number
        if number < min_value:
            min_value = number
            
    return max_value, min_value

max_value, min_value = find_max_min(numbers)
print(f"List: {numbers}")
print(f"Max: {max_value}")
print(f"Min: {min_value}")

### 4. Count Products Above a Price Threshold

prices = [450, 1200, 899, 1500, 300]
count = 0
for price in prices:
    if price > 1000:
        count += 1
print(f"Products above 1000: {count}")

### 5. Calculate Attendance Percentage

attendance = ["P", "P", "A", "P", "P"]
present_count = 0
for status in attendance:
    if status == "P":
        present_count += 1

total_days = len(attendance)
percentage = (present_count / total_days) * 100
print("Attendance Percentage:", percentage)

### 6. Remove Duplicate Phone Numbers

phone_numbers = [9876543210, 9123456789, 9876543210]
unique_numbers = set(phone_numbers)
print("Unique phone numbers:", unique_numbers)

### 7. Count Character Frequency

text = "pythonp"
char_count = {}
for char in text:
    if char in char_count:
        char_count[char] += 1
    else:
        char_count[char] = 1
print(char_count)

### 8. Convert List to Tuple

list = [10, 20, 30]
my_tuple = tuple(list)
print("Tuple:", my_tuple)

### 9.Check if a Key Exists in a Dictionary  

employees = {"Employee": "John","Manager": "Sarah","HR": "David"}
key_to_check = "Employee"
if key_to_check in employees:
    print("Employee exists")
else:
    print("Employee does not exist")

### 10. Calculate Average Marks

marks = [65, 70, 80, 75]
total = sum(marks)
count = len(marks)
average = total / count
print("Average Marks:", average)




